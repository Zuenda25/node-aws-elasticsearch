{
    "compilerOptions": {
      "outDir": "./dist",
      "target": "es2016",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "paths": {
        "@configs": ["/app/configs/*"],
        "@controllers": ["/app/controllers/*"],
        "@models": ["/app/models/*"],
        "@routes": ["/app/routes/*"],
        "@interfaces": ["/app/interfaces/*"],
        "@helpers": ["/app/helpers/*"],
      }
    }
  }
  